<div class="container mt1">
  <h1 class="mb2">Cikkek</h1>
  <div class="row">
    <div class="col-xs-12 col-sm-8">
      <% for (var i = 0; i < postsDataForIndexPage.length; i++) { %>
      <article>
        <div class="pl1 prhalf pthalf shadow2 mb2 bg-white border-r3 clearfix">
          <h2 class="medium mthalf mbhalf dark-gray-link uppercase"><a href="<%= postsDataForIndexPage[i].pathToPost %>"><%= postsDataForIndexPage[i].title %></a></h2>
          <p class="small-smallest bold gray mb0"><span class="glyphicon glyphicon-time"></span> <%= postsDataForIndexPage[i].dateFormatted %></p>
          <hr>
          <p class="m0 pbhalf"><%= postsDataForIndexPage[i].excerpt %></p>
          <a class="btn btn-md btn-primary pull-right mbhalf minimal uppercase expanded" href="<%= postsDataForIndexPage[i].pathToPost %>">Tovább →</a>
        </div>
      </article>
      <% } %>
    </div>

    <div class="col-xs-12 col-sm-4">
      <div class="mb2 pb1 bg-light">
        <h4 class="mt0 pthalf mb1 plhalf gray blog-archive">Archívum</h4>
        <% for (var i = 0; i < blogArchive.length; i++) { %>
        <h5 class="mt0 mbhalf pl1 dark-gray blog-archive">
          <a href="#y<%= blogArchive[i].year %>" data-toggle="collapse" class="no-underline">
            <%= blogArchive[i].year %><span class="gray normal"> (<%= blogArchive[i].articles.length %>)</span>
            <b class="caret"></b>
          </a>
        </h5>
        <ul id="y<%= blogArchive[i].year %>" class="no-bullets prhalf plhalf pbhalf collapse">
          <% for (var j = 0; j < blogArchive[i].articles.length; j++) { %>
          <li class="pl1 mb1">
            <a class="blog-archive underline" href="<%= blogArchive[i].articles[j].link %>">
              &raquo; <%= blogArchive[i].articles[j].title %>
            </a>
          </li>
          <% } %>
        </ul>
        <% } %>
      </div>
    </div>
  </div>
</div>
