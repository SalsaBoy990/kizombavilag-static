<div class="sm-col-12 md-col-10 lg-col-8 col-9 mx-auto align-left">
  <% for (var i = site.postdata.length - 1, j = 0; i >= 0; i--) { %>
    <div class="plhalf prhalf pthalf m0 mb3 border-shadow">
      <p class="smallest gray mb0 merryweather"><%= site.dateFormatted[i] %></p>
      <a href="<%= pathsToPosts[j] %>" class="big mbhalf bold-700 merryweather"><%= site.postdata[i].title %></a>
  
      <div class="mt1" style="display: inline-block; background: #fffffe;">
        <a href="<%= pathsToPosts[j++] %>">
          <img class="left m0 cover" style="width: 40%" src="<%= site.postdata[i].cover_image %>" alt="<%= site.postdata[i].title %>"/>
          <p class="dark-gray right m0 pbhalf pl1" style="width: 60%"><%= site.postdata[i].description %></p>
        </a>
      </div>
      <% if (i === site.postdata.length - 1) { %>
        <p class="pbhalf clearfix small dark-gray italic align-center" >Ha szeretnél e-mailben értesülni az új írásokról, akkor <a href="<%= site.mailchimp %>">iratkozz fel a hírlevelemre</a>!</p>
      <% } %>
  
    </div>
  <% } %>
  </div>